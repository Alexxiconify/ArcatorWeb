rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helpers
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.uid == 'CEch8cXWemSDQnM3dHVKPt0RGpn2' ||
        exists(/databases/$(database)/documents/whitelisted_admins/$(request.auth.uid))
      );
    }

    // Top-level legacy user profiles (public read, owner write)
    match /user_profiles/{userId} {
      allow read: if true;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update, delete: if isSignedIn() && request.auth.uid == userId;
    }

    // Also allow a /users collection for lookups (public read)
    match /users/{userId} {
      allow read: if true;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update, delete: if isSignedIn() && request.auth.uid == userId;
    }

    // Pages (support both `pages` and `temp_pages` under artifacts project)
    match /artifacts/{project}/public/data/{pagesCollection}/{pageId} {
      allow read: if pagesCollection in ['pages', 'temp_pages'];
      allow write: if isAdmin() && pagesCollection in ['pages', 'temp_pages'];
    }

    // Themes (themes and custom_themes)
    match /artifacts/{project}/public/data/{themesCollection}/{themeId} {
      allow read: if themesCollection in ['themes', 'custom_themes'];
      allow write: if isAdmin() && themesCollection in ['themes', 'custom_themes'];
    }

    // Forms / Threads: public read, signed-in users can create; only authors can edit/delete
    match /artifacts/{project}/public/data/forms/{threadId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && request.auth.uid == resource.data.createdBy;

      // Submissions/comments under a thread
      match /submissions/{commentId} {
        allow read: if true;
        allow create: if isSignedIn() && request.auth.uid == request.resource.data.authorId;
        allow update, delete: if isSignedIn() && request.auth.uid == resource.data.authorId;
      }
    }

    // DMs stored under artifacts/<project>/users/<userId>/dms/<dmId>
    // DM doc should include a `participants` array with UIDs of allowed users.
    match /artifacts/{project}/users/{userId}/dms/{dmId} {
      allow read: if isSignedIn() && (
        request.auth.uid == userId ||
        (resource.data.participants is list && request.auth.uid in resource.data.participants)
      );

      // Only the owning user may create a DM entry under their `users/{userId}/dms` path.
      allow create: if isSignedIn() && request.auth.uid == userId;

      allow update: if isSignedIn() && (
        request.auth.uid == userId ||
        (resource.data.participants is list && request.auth.uid in resource.data.participants)
      );

      allow delete: if isSignedIn() && (isAdmin() || request.auth.uid == userId);

      // Messages subcollection inside a DM
      match /messages/{messageId} {
        // read if you're a participant on the parent DM
        allow read: if isSignedIn() && (
          request.auth.uid == userId ||
          (get(/databases/$(database)/documents/artifacts/$(project)/users/$(userId)/dms/$(dmId)).data.participants is list &&
           request.auth.uid in get(/databases/$(database)/documents/artifacts/$(project)/users/$(userId)/dms/$(dmId)).data.participants)
        );

        // create a message if signed in and you are listed as a participant in the parent DM
        allow create: if isSignedIn() && (
          request.auth.uid == request.resource.data.sender ||
          (request.resource.data.participants is list && request.auth.uid in request.resource.data.participants) ||
          (get(/databases/$(database)/documents/artifacts/$(project)/users/$(userId)/dms/$(dmId)).data.participants is list && request.auth.uid in get(/databases/$(database)/documents/artifacts/$(project)/users/$(userId)/dms/$(dmId)).data.participants)
        );

        // only the sender can update/delete their message
        allow update, delete: if isSignedIn() && request.auth.uid == resource.data.sender;
      }
    }

    // Catch-all: deny by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}